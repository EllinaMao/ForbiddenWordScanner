<Window x:Class="ForbiddenWordScanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forbidden Word Scanner" Height="700" Width="900" Background="#FF101010"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Введите или загрузите запрещённые слова (через запятую или перенос строки):" Foreground="White"/>
        <TextBox x:Name="WordsTextBox" Height="100" AcceptsReturn="True" TextWrapping="Wrap" Foreground="White" Background="#FF202020" Margin="0,25,0,10"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <Button Content="Загрузить слова" Background="#FFBB5500" Foreground="White" Margin="5" Width="120" Click="LoadWords_Click"/>
            <Button Content="Выбрать путь" Background="#FFBB5500" Foreground="White" Margin="5" Width="120" Click="SelectPath_Click"/>
            <Button Content="Старт" Background="#FFBB5500" Foreground="White" Margin="5" Width="100" Click="Start_Click"/>
            <Button Content="Пауза" Background="#FFBB5500" Foreground="White" Margin="5" Width="100" Click="Pause_Click"/>
            <Button Content="Продолжить" Background="#FFBB5500" Foreground="White" Margin="5" Width="100" Click="Resume_Click"/>
            <Button Content="Стоп" Background="#FFBB5500" Foreground="White" Margin="5" Width="100" Click="Stop_Click"/>
        </StackPanel>

        <ListBox x:Name="ForbiddenWordsList" Grid.Row="2" Background="#FF202020" Foreground="Black" Height="80" Margin="0,0,0,10"/>

        <DataGrid x:Name="ResultsGrid" Grid.Row="3" AutoGenerateColumns="False" Foreground="Black" Background="#FF202020" GridLinesVisibility="Horizontal" HeadersVisibility="Column" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Файл" Binding="{Binding FilePath}" Width="*"/>
                <DataGridTextColumn Header="Размер" Binding="{Binding Size}" Width="100"/>
                <DataGridTextColumn Header="Количество замен" Binding="{Binding Replacements}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <ProgressBar x:Name="MainProgressBar" Grid.Row="4" Height="25" Foreground="#FFBB5500" Background="#FF202020"/>
    </Grid>
</Window>
